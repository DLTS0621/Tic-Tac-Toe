<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:id="@+id/fragment_container">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="31dp"
            android:layout_marginEnd="670dp"
            android:background="@drawable/life"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="701dp"
            android:background="@drawable/life"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="641dp"
            android:background="@drawable/life"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="59dp"
            android:text="Points:"
            android:id="@+id/points"
            android:textColor="#a300f4"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/friendly_ship"
            android:layout_width="117dp"
            android:layout_height="160dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/space_ship"
            />
    </RelativeLayout>
</LinearLayout>